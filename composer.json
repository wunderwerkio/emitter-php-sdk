{
    "name": "wunderwerkio/php-emitter",
    "description": "PHP SDK for the emitter event broker",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Wunderwerk\\PhpEmitter\\": "src/",
            "Tests\\Wunderwerk\\PhpEmitter\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests/",
        "lint": [
            "vendor/bin/phpstan analyse -l 2 -c phpstan.neon --no-progress src",
            "vendor/bin/phpcs src tests"
        ]
    },
    "authors": [
        {
            "name": "wunderwerk software GmbH"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "php-mqtt/client": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^1.6",
        "phpstan/phpstan-webmozart-assert": "^1.1",
        "squizlabs/php_codesniffer": "^3.6",
        "slevomat/coding-standard": "^7.2",
        "drupal/coder": "^8.3",
        "symfony/polyfill-php80": "^1.25"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
